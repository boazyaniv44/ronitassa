---
import '../styles/global.css';
import siteInfo from '../data/site-info.json';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = siteInfo.seo.defaultTitle,
  description = siteInfo.seo.defaultDescription
} = Astro.props;

const whatsappNumber = `972${siteInfo.contact.whatsapp.replace(/^0/, '')}`;
---

<!DOCTYPE html>
<html lang="he" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preconnect to Unsplash for faster image loading -->
    <link rel="preconnect" href="https://images.unsplash.com" />

    <!-- Assistant & Noto Sans Hebrew Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;500;600;700&family=Noto+Sans+Hebrew:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-[100] focus:bg-white focus:text-black focus:px-4 focus:py-2">דלג לתוכן הראשי</a>

    <!-- Header -->
    <header class="sticky top-0 z-50 bg-black shadow-xl border-b-2 border-primary">
      <div class="container">
        <div class="flex items-center justify-between py-4">
          
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden text-white p-2" aria-label="תפריט">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

          <!-- Navigation (Desktop) -->
          <nav class="hidden md:flex items-center gap-8">
            <a href="/" class="text-white font-medium hover:text-primary transition-colors relative group">
              דף הבית
              <span class="absolute bottom-[-4px] left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform origin-right"></span>
            </a>
            <a href="/about" class="text-white font-medium hover:text-primary transition-colors relative group">
              אודות
              <span class="absolute bottom-[-4px] left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform origin-right"></span>
            </a>
            <div class="relative group">
              <button class="text-white font-medium hover:text-primary transition-colors flex items-center gap-1">
                מוצרים
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute top-full right-0 mt-2 w-48 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-right z-50 overflow-hidden">
                <a href="/products/beef" class="block px-4 py-3 text-black hover:bg-gray-50 hover:text-primary transition-colors border-b border-gray-100">בקר</a>
                <a href="/products/lamb" class="block px-4 py-3 text-black hover:bg-gray-50 hover:text-primary transition-colors border-b border-gray-100">כבש</a>
                <a href="/products/chicken" class="block px-4 py-3 text-black hover:bg-gray-50 hover:text-primary transition-colors border-b border-gray-100">עוף</a>
                <a href="/products/homemade" class="block px-4 py-3 text-black hover:bg-gray-50 hover:text-primary transition-colors">תוצרת בית</a>
              </div>
            </div>
            <a href="/contact" class="text-white font-medium hover:text-primary transition-colors relative group">
              צור קשר
              <span class="absolute bottom-[-4px] left-0 w-full h-0.5 bg-primary scale-x-0 group-hover:scale-x-100 transition-transform origin-right"></span>
            </a>
          </nav>

          <!-- Contact & Kosher Badge (Right Side) -->
          <div class="flex items-center gap-4">
            <!-- Kosher Badge -->
            <div class="block">
              <img src="/images/kosher-badge.png" alt="כשר" class="h-10 md:h-16 w-auto opacity-90 hover:opacity-100 transition-opacity" />
            </div>

            <!-- WhatsApp Button -->
            <a href={`https://wa.me/${whatsappNumber}`} target="_blank" rel="noopener noreferrer" class="hidden md:flex items-center gap-2 bg-[#25D366] text-white px-6 py-2 rounded-full font-bold hover:bg-[#128C7E] transition-all hover:-translate-y-0.5 shadow-lg shadow-[#25D366]/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
              </svg>
              הזמנה בווטסאפ
            </a>
            <a href={`https://wa.me/${whatsappNumber}`} target="_blank" rel="noopener noreferrer" class="md:hidden text-white p-2 bg-[#25D366] rounded-full shadow-lg shadow-[#25D366]/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
              </svg>
            </a>

            <!-- Phone Button -->
            <a href={`tel:${siteInfo.contact.phone}`} class="hidden md:flex items-center gap-2 bg-primary text-white px-6 py-2 rounded-full font-bold hover:bg-primary-dark transition-all hover:-translate-y-0.5 shadow-lg shadow-primary/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {siteInfo.contact.phone}
            </a>
            <a href={`tel:${siteInfo.contact.phone}`} class="md:hidden text-white p-2 bg-primary rounded-full shadow-lg shadow-primary/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Overlay -->
      <div id="mobile-menu" class="fixed inset-0 bg-black/95 z-50 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col pt-20 px-8">
        <button id="close-menu-btn" class="absolute top-6 right-6 text-white p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        
        <nav class="flex flex-col gap-6 text-center">
          <a href="/" class="text-2xl text-white font-bold hover:text-primary transition-colors">דף הבית</a>
          <a href="/about" class="text-2xl text-white font-bold hover:text-primary transition-colors">אודות</a>
          <div class="h-px bg-white/10 w-full my-2"></div>
          <p class="text-gray-400 text-sm font-medium uppercase tracking-wider">המוצרים שלנו</p>
          <a href="/products/beef" class="text-xl text-white font-medium hover:text-primary transition-colors">בקר</a>
          <a href="/products/lamb" class="text-xl text-white font-medium hover:text-primary transition-colors">כבש</a>
          <a href="/products/chicken" class="text-xl text-white font-medium hover:text-primary transition-colors">עוף</a>
          <a href="/products/homemade" class="text-xl text-white font-medium hover:text-primary transition-colors">תוצרת בית</a>
          <div class="h-px bg-white/10 w-full my-2"></div>
          <a href="/contact" class="text-2xl text-white font-bold hover:text-primary transition-colors">צור קשר</a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main id="main-content" class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-16 pb-8 border-t border-white/10">
      <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
          <!-- About -->
          <div>
            <h3 class="text-3xl font-bold mb-6 text-primary">{siteInfo.name}</h3>
            <p class="text-gray-400 leading-relaxed text-lg">{siteInfo.description}</p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-2xl font-bold mb-6 text-primary">קישורים מהירים</h3>
            <ul class="space-y-3">
              <li><a href="/" class="text-gray-400 hover:text-primary transition-colors text-lg">דף הבית</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-primary transition-colors text-lg">אודות</a></li>
              <li><a href="/products/beef" class="text-gray-400 hover:text-primary transition-colors text-lg">בקר</a></li>
              <li><a href="/products/lamb" class="text-gray-400 hover:text-primary transition-colors text-lg">כבש</a></li>
              <li><a href="/products/chicken" class="text-gray-400 hover:text-primary transition-colors text-lg">עוף</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-primary transition-colors text-lg">צור קשר</a></li>
              <li><a href="/accessibility" class="text-gray-400 hover:text-primary transition-colors text-lg">הצהרת נגישות</a></li>
            </ul>
          </div>

          <!-- Contact Info -->
          <div>
            <h3 class="text-2xl font-bold mb-6 text-primary">יצירת קשר</h3>
            <ul class="space-y-4 text-lg text-gray-400">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                <a href="https://maps.app.goo.gl/kHf6CiTJqFxeuHA38" target="_blank" rel="noopener" class="hover:text-primary transition-colors">{siteInfo.address.full}</a>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-primary shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                <a href={`tel:${siteInfo.contact.phone}`} class="hover:text-primary transition-colors">{siteInfo.contact.phone}</a>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-primary shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                <a href={`https://wa.me/${whatsappNumber}`} class="hover:text-primary transition-colors">WhatsApp: {siteInfo.contact.whatsapp}</a>
              </li>
            </ul>

            <!-- Social Media -->
            <div class="flex gap-4 mt-8">
              <a href={siteInfo.contact.facebook} target="_blank" rel="noopener" class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white hover:bg-primary-dark hover:scale-110 transition-all shadow-lg shadow-primary/30" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
              <a href={siteInfo.contact.instagram} target="_blank" rel="noopener" class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white hover:bg-primary-dark hover:scale-110 transition-all shadow-lg shadow-primary/30" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-white/10 pt-8 text-center">
          <p class="text-gray-500 text-sm">© 2025 {siteInfo.name} - קצביית בוטיק. כל הזכויות שמורות.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile Menu Logic
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const closeMenuBtn = document.getElementById('close-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      function toggleMenu() {
        if (mobileMenu) {
          mobileMenu.classList.toggle('translate-x-full');
        }
      }

      mobileMenuBtn?.addEventListener('click', toggleMenu);
      closeMenuBtn?.addEventListener('click', toggleMenu);
    </script>
  </body>
</html>
